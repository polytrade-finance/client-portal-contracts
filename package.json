{
  "name": "polytrade",
  "description": "Polytrade - Smart Contracts",
  "version": "0.1.0",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "compile": "npx hardhat compile",
    "lint:ts": "npx eslint '**/*.ts'",
    "lint:ts-fix": "npx eslint '**/*.ts' --fix",
    "lint:sol": "npx prettier '**/*.{json,sol,md}' --check && npx solhint 'contracts/**/*.sol'",
    "lint:sol-fix": "npx prettier '**/*.{json,sol,md}' --write && npx solhint 'contracts/**/*.sol' --fix",
    "lint": "npm run lint:ts && npm run lint:sol",
    "lint:fix": "npm run lint:ts-fix && npm run lint:sol-fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.6",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chai": "^4.3.4",
    "coveralls": "^3.1.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.7",
    "hardhat": "^2.6.5",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^7.0.2",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solc-0.8": "npm:solc@^0.8.10",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.17",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.3.0",
    "typechain": "^5.2.0",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.3.2",
    "audit": "^0.0.6"
  }
}
